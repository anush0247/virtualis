package com.aakash.vlabs.quiz;

import android.app.Activity;
import android.app.FragmentManager;
import android.app.FragmentTransaction;
import android.os.Bundle;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;
import android.widget.LinearLayout;

public class QuizStart extends Activity {

	Button prev,next;
	int currnt_qn = 0,next_qn = 1,prev_qn = 0;
	
	FragmentManager fragmentManager ;
	FragmentTransaction fragmentTransaction;
	
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.quiz_start);
        
        LinearLayout lt = (LinearLayout) findViewById(R.id.quiz_topbar);
        
        fragmentManager = getFragmentManager();
        Question currentQuestion = new Question();
        fragmentTransaction = fragmentManager.beginTransaction();
		fragmentTransaction.add(android.R.id.content, currentQuestion);
        fragmentTransaction.commit();
        
        prev = (Button) findViewById(R.id.quiz_qn_prev);
        next = (Button) findViewById(R.id.quiz_qn_next);
        
        prev.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				Question nextQuestion = new Question();
				nextQuestion.setId(next_qn);
				next_qn = currnt_qn;
				currnt_qn = prev_qn;
				prev_qn--;
				
				fragmentManager = getFragmentManager();
				fragmentTransaction = fragmentManager.beginTransaction();
				fragmentTransaction.replace(android.R.id.content, nextQuestion);
		        fragmentTransaction.commit();
			}
		});
        
        next.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				Question nextQuestion = new Question();
				nextQuestion.setId(next_qn);
				prev_qn = currnt_qn;
				currnt_qn = next_qn;
				next_qn++;
				
				fragmentManager = getFragmentManager();
				fragmentTransaction = fragmentManager.beginTransaction();
				fragmentTransaction.replace(android.R.id.content, nextQuestion);
		        fragmentTransaction.commit();
				
			}
		});
        
    }
}
